<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/navbar.ejs') %>

    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <%- include('../layout/sidebar.ejs') %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-sm-12">
              <div class="home-tab">
                <!-- main section -->
                <hr />
                <form
                  class="mt-3"
                  action="/admin/product/create"
                  method="post"
                  enctype="multipart/form-data"
                >
                  <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" class="form-control" name="title" />
                  </div>
                  
                  <div class="form-group">
                    <label for="">Description</label>
                    <input
                      type="text"
                      class="form-control"
                      id=""
                      name="description"
                    />
                  </div>

                  <div class="form-group">
                    <label for="">Price</label>
                    <input
                      type="number"
                      class="form-control"
                      id=""
                      name="price"
                    />
                  </div>

                  <div class="form-group d-flex">
                    <label class="mt-2" for="exampleCheck1">Category : </label>

                    <div class="form-check form-check-inline form_radio">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="category"
                        value="Electronics"
                      />
                      <label class="form-check-label" for="">Electronics</label>
                    </div>

                    <div class="form-check form-check-inline form_radio">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="category"
                        value="Garments"
                      />
                      <label class="form-check-label" for="">Garments</label>
                    </div>

                    <div class="form-check form-check-inline form_radio">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="category"
                        value="Furniture"
                      />
                      <label class="form-check-label" for="">Furniture</label>
                    </div>

                    <div class="form-check form-check-inline form_radio">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="category"
                        value="Groceries"
                      />
                      <label class="form-check-label" for="">Groceries</label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="">Image</label>
                    <input
                      type="file"
                      class="form-control"
                      id=""
                      name="image"
                      multiple
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include('../layout/partialFooter.ejs') %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>

    <%- include('../layout/footer.ejs') %>
  </body>
</html>
