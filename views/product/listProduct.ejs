<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/navbar.ejs') %>

    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <%- include('../layout/sidebar.ejs') %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-sm-12">
              <div class="home-tab">
                <!-- main section -->
                <hr />
                <a href="/admin/addproduct">
                  <button class="btn btn-success">Create Product</button>
                </a>

                <% if(msz.length>0){ %>
                <div class="alert alert-success"><%= msz %></div>
                <% } %>

                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Sl No.</th>
                      <th scope="col">Title</th>
                      <th scope="col">Description</th>
                      <th scope="col">Price</th>
                      <th scope="col">Category</th>
                      <th scope="col">Image</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let count=1 %> <% allProductData.forEach((item,index)=>{
                    %>
                    <tr>
                      <th scope="row"><%= count++ %></th>
                      <td><%= item.title %></td>
                      <td><%= item.description.slice(0,40) %>...</td>
                      <td><%= item.price %></td>
                      <td><%= item.category %></td>
                      <td>
                        <img
                          src="/<%= item.image[0] %>"
                          alt=""
                          height="120"
                          width="170"
                        />
                      </td>
                      <td>
                        <a href="/admin/product/edit/<%= item._id %>">
                          <button class="btn btn-secondary">Edit</button>
                        </a>
                        <a href="/admin/product/remove/<%= item._id %>">
                          <button class="btn btn-danger">Delete</button>
                        </a>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include('../layout/partialFooter.ejs') %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>

    <%- include('../layout/footer.ejs') %>
  </body>
</html>
